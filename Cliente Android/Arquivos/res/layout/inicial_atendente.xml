<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DDCFE6"
    tools:context=".InicioAtendenteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Atendimento"
            android:fontFamily="@font/comfortaa"
            android:textColor="#6C4D80"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textFontWeight="100"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="#160F1A"
                    android:layout_marginBottom="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#49454D"
                    android:layout_marginBottom="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#ACA1B3"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:text="PEDIDO"
                    android:background="@drawable/btn_atendente"
                    android:fontFamily="@font/crimson"
                    android:padding="10dp"
                    android:textSize="40dp"
                    android:textColor="#160F1A"
                    android:textFontWeight="600"
                    android:textAlignment="center"
                    android:layout_marginTop="126dp"/>
                <Button
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:text="CADASTRO"
                    android:background="@drawable/btn_atendente"
                    android:fontFamily="@font/crimson"
                    android:padding="10dp"
                    android:textSize="40dp"
                    android:textColor="#160F1A"
                    android:textFontWeight="600"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>