<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9A404"
    tools:context=".PedidosActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Pedidos"
            android:fontFamily="@font/comfortaa"
            android:textColor="#160F1A"
            android:textAlignment="center"
            android:textSize="50sp"
            android:textFontWeight="1000"/>

        <LinearLayout
            android:id="@+id/caixaDaLista"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:background="#DDCFE6"
            android:orientation="vertical">
            <Button
                android:id="@+id/btnRefrescar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/comfortaa"
                android:text="Refrescar"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textAllCaps="false"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:textColor="#F7DCDB"
                android:background="@drawable/button_login"
                android:padding="10dp"
                android:paddingTop="0dp"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>