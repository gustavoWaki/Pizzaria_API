<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7DCDB"
    tools:context=".InicioGerenteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Gerenciamento"
            android:fontFamily="@font/comfortaa"
            android:textColor="#756968"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textFontWeight="100"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:background="#754745"
                    android:layout_marginBottom="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#C27572"
                    android:layout_marginBottom="10dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="#F59390"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <Button
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:text="MANUTENÇÃO"
                    android:background="@drawable/btn_gerente"
                    android:fontFamily="@font/crimson"
                    android:padding="10dp"
                    android:textSize="40dp"
                    android:textColor="#160F1A"
                    android:textFontWeight="600"
                    android:textAlignment="center"
                    android:layout_marginTop="126dp"/>
                <Button
                    android:layout_gravity="center_horizontal"
                    android:layout_width="300dp"
                    android:layout_height="120dp"
                    android:text="RELATÓRIO"
                    android:background="@drawable/btn_gerente"
                    android:fontFamily="@font/crimson"
                    android:padding="10dp"
                    android:textSize="40dp"
                    android:textColor="#160F1A"
                    android:textFontWeight="600"
                    android:textAlignment="center"
                    android:layout_marginTop="25dp"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>